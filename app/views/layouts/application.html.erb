<!DOCTYPE html>
<html>
  <head>
    <title>Wavesky</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <!-- font awesome !-->
    <script src = "https://kit.fontawesome.com/c212c7eb6d.js"
    crossorigin = "anonymous" > </script>

    <link
    href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
    rel="stylesheet">

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link rel="shortcut icon" type="image/jpg" href="<%= image_url('favicon.ico') %>"/>

    
    <% if current_user %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id %>,
          "username": "<%= current_user.username %>",
          "profilePhoto": "<%= url_for(current_user.profile_photo) %>",
          "facebook": "<%= current_user.facebook%>",
          "instagram": "<%= current_user.instagram %>",
          "description": "<%= current_user.description %>",
        }
      </script>
    <% end %>

    <script type="text/javascript">
  window.party1 = "<%= image_url('party1.jpg') %>";
</script>
    <script type="text/javascript">
  window.party2 = "<%= image_url('party2.jpg') %>";
</script>

<script type="text/javascript">
  window.apple = "<%= image_url('apple.png') %>";
</script>

<script type="text/javascript">
  window.musicNotes = "<%= image_url('music-notes.jpg') %>";
</script>
<script type="text/javascript">
  window.singer = "<%= image_url('singer.jpg') %>";
</script>
    
  </head>

  <body>
    <%= yield %>
  </body>
</html>

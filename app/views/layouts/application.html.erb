<!DOCTYPE html>
<html>
  <head>
    <title>Wavesky</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <!-- font awesome !-->
    <script src = "https://kit.fontawesome.com/c212c7eb6d.js"
    crossorigin = "anonymous" > </script>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    
    <% if current_user %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id %>,
          "username": "<%= current_user.username %>"
        }
      </script>
    <% end %>
    
  </head>

  <body>
    <%= yield %>
  </body>
</html>
